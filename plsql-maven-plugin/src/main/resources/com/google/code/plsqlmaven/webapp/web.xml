<?xml version="1.0" encoding="UTF-8"?>
<web-app id="${project.build.finalName}" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>${project.build.finalName}</display-name>
	<listener>
	 <listener-class>com.google.code.eforceconfig.servlet.ConfigContextListener</listener-class>
	</listener>	
	<listener>
	 <listener-class>com.google.code.plsqlgateway.servlet.DADContextListener</listener-class>
	</listener>
	<listener>
	 <listener-class>com.google.code.plsqlmaven.webapp.DeployerContextListener</listener-class>
	</listener>
	<context-param>
	  <param-name>com.google.code.eforceconfig.CONFIGSET_NAME</param-name>
	  <param-value>plsqlgateway-${project.build.finalName}</param-value>
	</context-param>	
	<context-param>
		<param-name>com.google.code.eforceconfig.CACHE_SIZE</param-name>
		<param-value>20</param-value>
	</context-param>
	<context-param>
		<param-name>com.google.code.eforceconfig.CHANGE_CONTROL_INTERVAL</param-name>
		<param-value>10000</param-value>
	</context-param>
	<context-param>
		<param-name>com.google.code.eforceconfig.GARBAGE_COLLECTOR_INTERVAL</param-name>
		<param-value>10000</param-value>
	</context-param>
	<context-param>
		<param-name>com.google.code.eforceconfig.START_CHANGE_CONTROL</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>com.google.code.eforceconfig.START_GARBAGE_COLLECTOR</param-name>
		<param-value>true</param-value>
	</context-param>	
	<servlet>
		<display-name>PLSQLGatewayServlet</display-name>
		<servlet-name>PLSQLGatewayServlet</servlet-name>
		<servlet-class>com.google.code.plsqlgateway.servlet.PLSQLGatewayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PLSQLGatewayServlet</servlet-name>
		<url-pattern>/pls/*</url-pattern>
	</servlet-mapping>
</web-app>
